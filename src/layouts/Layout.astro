---
interface Props {
	title: string;
}

const { title } = Astro.props;

import '../styles/mavie.css';
---

<!doctype html>
<html lang="pt_BR">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Portifólio" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/iconmark.svg" />
		<meta name="generator" content={Astro.generator} />
		<link rel="stylesheet" href="input.css">
		<title>{title}</title>

		 <!-- Open Graph Meta Tags -->
		 <meta property="og:title" content="Sóstenes Santana Santos" />
		 <meta property="og:description" content="Portifólio" />
		 <meta property="og:image" content="" />
		 <meta property="og:url" content="https://www.sostenes.com.br" />
		 <meta property="og:type" content="website" />
		 <meta property="og:locale" content="pt_BR" />
	 
		 <!-- Twitter Cards (para Twitter) -->
		 <meta name="twitter:card" content="summary_large_image" />
		 <meta name="twitter:title" content="Sóstenes Santana Santos" />
		 <meta name="twitter:description" content="Portifólio" />
		 <meta name="twitter:image" content="" />
		 <meta name="twitter:url" content="https://www.sostenes.com.br" />
	</head>
	<body>
		<slot />
	</body>
</html>
